{
  "$schema": "https://github.com/softwaremill/fablo/releases/download/1.0.2/schema.json",
  "global": {
    "fabricVersion": "2.3.0",
    "tls": false
  },
  "orgs": [
    {
      "organization": {
        "name": "Orderer",
        "domain": "orderer.example.com"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "solo",
          "instances": 1
        }
      ],
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Org1",
        "domain": "org1.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Org2",
        "domain": "org2.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
    },
    {
      "organization": {
        "name": "Org3",
        "domain": "org3.example.com"
      },
      "peer": {
        "instances": 1,
        "db": "CouchDb"
      },
      "tools": {
        "fabloRest": true
      }
    }
  ],
  "channels": [
    {
      "name": "mychannel",
      "orgs": [
        {
          "name": "Org1",
          "peers": [
            "peer0",
          ]
        },
        {
          "name": "Org2",
          "peers": [
            "peer0",
          ]
        },
        {
          "name": "Org3",
          "peers": [
            "peer0",
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "chaincode1",
      "endorsement": "AND('Org1MSP.member', 'Org2MSP.member', 'Org3MSP.member')",
      "version": "0.0.1",
      "lang": "node",
      "channel": "mychannel",
      "directory": "./chaincodes/chaincode-kv-node"
    }
  ]
}