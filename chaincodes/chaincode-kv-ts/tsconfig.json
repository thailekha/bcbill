{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": ".",
    "rootDir": "./src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": false,
    "declaration": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
